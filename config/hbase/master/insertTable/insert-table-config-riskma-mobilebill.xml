<?xml version="1.0" encoding="UTF-8"?>
<root>

    <file>
        <IsHDFS>false</IsHDFS>
        <HdfsAddress></hdfsAddress>
        <FilePath></FilePath><!-- 要入库的文件路径:请使用绝对路径 -->
        <LogPath>/data/lf_serv_pro/unload_hbase/shell/logs</LogPath>
        <Seperator>\|</Seperator><!-- 文件记录的分割符  逗号用，句号用\.竖杠用\| -->
        <Counts>11</Counts><!-- 文件按照分割符分割出的总字段个数 -->
        <ThreadNum>4</ThreadNum><!-- 解析文件入库的线程数 -->
        <CompressType>txt</CompressType><!-- txt、gz、bzip2 -->
        <UniqueID>false</UniqueID><!-- 是否需要唯一标识每一行数据 -->
    </file>

    <column>
       <!-- 手机号码（脱敏）sendTel -->
        <rowkey>3</rowkey>
        <!-- 账期 monthId-->
        <column1>0</column1>
        <!-- 省份 provId -->
        <column2>1</column2>
        <!-- 地市 areaId-->
        <column3>2</column3>
        <!-- 业务类型 serviceType-->
        <column4>4</column4>
        <!-- 在网时长 innetMonths -->
        <column5>5</column5>
        <!-- 是否在网 isInnet-->
        <column6>6</column6>
        <!-- 当月出账收入 thisFee -->
        <column7>7</column7>
        <!-- 3个月出账收入 last3Fee-->
        <column8>8</column8>
        <!-- 6个月出账收入 last6Fee -->
        <column9>9</column9>
        <!-- 近一年出账收入 TOTALYEARFEE -->
        <column10>10</column10> 
    </column>

    <table>
        <TableName>riskma_mobilebill</TableName> <!-- 表名 -->
        <FamilyName>f</FamilyName> <!-- 列族：暂时只支持一个 -->
        <BatchCount>5000</BatchCount> <!-- 多少条一提交 -->
    </table>

    <zookeeper>
        <Quorum></Quorum><!-- zookeeper主机 -->
        <Parent>/hbase_zx</Parent><!-- hbase在zookeeper上的存储目录:可当做是库名 -->
    </zookeeper>

</root>
